{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "platformAutomerge": true,
        "platformCommit": "auto"
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchCurrentVersion": "!/^0/",
            "platformCommit": true
        }
    ]
}