{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "platformAutomerge": true,
        "platformCommit": "auto"
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchCurrentVersion": "!/^0/",
            "automerge": true,
            "platformAutomerge": true,
            "platformCommit": true
        },
        {
            "matchDatasources": [
                "go"
            ],
            "prBodyNotes": "this pin is for the version of github.com/google/cel-go that is compatible between protovalidate and kubernetes. see https://github.com/kubernetes/apiserver/issues/116",
            "allowedVersions": "/^v0\\.22\\.1$/",
            "matchPackageNames": [
                "github.com/google/cel-go"
            ]
        }
    ]
}